{% extends "../../partials/analytics/layout.njk" %}

{% set graphPageId = "behaviour-entries" %}
{% set graphTitle = "Behaviour entries" %}
{% set pageTitle = applicationName + " â€“ " + graphTitle %}

{% block content %}
  {{ super() }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "../../partials/messages.njk" %}

      {% include "../../partials/formErrorSummary.njk" %}

      <h1 class="govuk-heading-xl">
        {{ graphTitle }}
      </h1>

    </div>
  </div>

  <div class="govuk-grid-row">
    <section class="govuk-grid-column-one-half govuk-!-margin-bottom-9">

      {% set chartTitle = "Comparison of positive and negative behaviour entries by residential location in the last 28 days" %}
      {% set chartGuidance = "This chart lets you see the balance of positive to negative entries across the prison and at residential location level. Do these splits suggest a fair and consistent application of incentives?" %}
      {% set labelColumn = "Location" %}
      {% set wideLabel = false %}
      {% set graphId = "entries-by-location" %}
      {% set graphGoogleAnalyticsCategory = "Behaviour entries by wing" %}
      {% set chartFeedbackForm = forms[graphId] %}
      {% set report = behaviourEntries %}
      {% include "../../partials/analytics/chartBehaviourEntries.njk" %}

    </section>
    <section class="govuk-grid-column-one-half govuk-!-margin-bottom-9">

      {% set chartTitle = "Percentage and number of prisoners on each behaviour entry by residential location in the last 28 days" %}
      {% set chartGuidance = "Individual prisoner behaviours can give you a fuller picture. Are you happy with how many prisoners have no entries and how many have both? Positive entries can help lead to behaviour improvements." %}
      {% set labelColumn = "Location" %}
      {% set graphId = "prisoners-with-entries-by-location" %}
      {% set graphGoogleAnalyticsCategory = "Prisoners with behaviour entries by wing" %}
      {% set chartFeedbackForm = forms[graphId] %}
      {% set report = prisonersWithEntries %}
      {% include "../../partials/analytics/chartPrisonersWithBehaviourEntries.njk" %}

    </section>
  </div>

  {% if featureFlags.showAnalyticsTrends %}
    <div class="govuk-grid-row">
      <section class="govuk-grid-column-two-thirds govuk-!-margin-bottom-9">

        {% set chartTitle = "Comparison of positive and negative behaviour entries in the establishment in the last 12 months" %}
        {% set chartGuidance = "Use this chart to compare the numbers of positive, negative and total entries with previous months. What do the number of entries and the positive-negative ratios tell you about the incentives policy and the behaviour of prisoners? Be aware of any significant population changes." %}
        {% set graphId = "trends-entries" %}
        {% set graphGoogleAnalyticsCategory = "Behaviour entry trends" %}
        {% set chartFeedbackForm = forms[graphId] %}
        {% set report = trends %}
        {% include "../../partials/analytics/chartTrends.njk" %}

      </section>
    </div>
  {% endif %}

  {% include "../../partials/analytics/disclaimer.njk" %}
{% endblock %}
