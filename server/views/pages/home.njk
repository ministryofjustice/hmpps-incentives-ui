{% extends "../partials/layout.njk" %}

{% from "../components/card/card.njk" import card %}

{% set pageTitle = applicationName + " â€“ Home" %}

{% block content %}

  <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">
    {{ applicationName }}
  </h1>

  <ul class="govuk-grid-row card-group">
    <li class="govuk-grid-column-one-third card-group__item">
      {{ card({
        "href": "/select-location",
        "clickable": "true",
        "heading": "View review dates and incentive information",
        "description": "See review dates, incentive levels and behaviour entries by residential location.",
        "id": "incentive-information"
      }) }}
    </li>
    {% if showAnalytics %}
      <li class="govuk-grid-column-one-third card-group__item">
        {{ card({
          "href": "/analytics",
          "clickable": "true",
          "heading": "Incentives data",
          "description": "See incentive level data visualisations across locations.",
          "id": "incentive-analytics"
        }) }}
      </li>
    {% endif %}
  </ul>

{% endblock %}
