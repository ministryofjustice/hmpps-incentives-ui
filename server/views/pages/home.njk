{% extends "../partials/layout.njk" %}

{% from "../components/card/card.njk" import card %}

{% set pageTitle = applicationName + " â€“ Home" %}

{% block content %}

  <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">
    {{ applicationName }}
  </h1>

  <ul class="govuk-grid-row card-group">
    <li class="govuk-grid-column-one-third card-group__item">
      {% if featureFlags.hideDaysColumnsInIncentivesTable %}
        {% set cardDescription = "See incentive levels and behaviour entries for the prison population, by residential location." %}
      {% else %}
        {% set cardDescription = "See review dates, incentive levels and behaviour entries by residential location." %}
      {% endif %}

      {{ card({
        href: "/select-location",
        clickable: "true",
        heading: "Prisoner incentive information",
        description: cardDescription,
        id: "incentive-information"
      }) }}

    </li>
    <li class="govuk-grid-column-one-third card-group__item">
      {% if featureFlags.showRegionalNational %}
        {% set cardDescription = "Data visualisations for incentive levels and behaviour entries at establishment level, including protected characteristics." %}
      {% else %}
        {% set cardDescription = "See data visualisations for incentive levels and behaviour entries, including protected characteristics." %}
      {% endif %}

      {{ card({
        href: "/analytics/incentive-levels",
        clickable: "true",
        heading: "Incentive levels and behaviour entry charts",
        description: cardDescription,
        id: "incentive-analytics"
      }) }}

    </li>

    {% if featureFlags.showRegionalNational %}
      <li class="govuk-grid-column-one-third card-group__item">

        {{ card({
          href: "/analytics/select-pgd-region",
          clickable: "true",
          heading: "Prison group and national charts",
          description: "Data visualisations for incentive levels, behaviour entries and protected characteristics at prison group and national level.",
          id: "select-pgd-region"
        }) }}

      </li>
    {% endif %}

    <li class="govuk-grid-column-one-third card-group__item">
      {{ card({
        href: "/about",
        clickable: "true",
        heading: "About",
        description: "Information on how we collect, group and analyse data for the Manage incentive charts.",
        id: "about-data"
      }) }}
    </li>
  </ul>

{% endblock %}
