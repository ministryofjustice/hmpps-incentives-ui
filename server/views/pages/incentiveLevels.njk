{% extends "../partials/layout.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set pageTitle = applicationName + " â€“ Incentive levels" %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">Incentive levels</h1>

      {% set rows = [] %}

      {% for incentiveLevel in incentiveLevels %}
        {% set name %}
          {{ incentiveLevel.description }}
          {% if not incentiveLevel.active %}
            (Disabled)
          {% endif %}
        {% endset %}

        {% set url -%}
          /incentive-levels/{{ incentiveLevel.code }}
        {%- endset %}

        {% set rows = (rows.push({
          key: { text: "Level" },
          value: { html: name },
          actions: {
            items: [
              {
                href: url,
                text: "View",
                visuallyHiddenText: "level"
              }
            ]
          }
        }), rows) %}
      {% endfor %}

      {{ govukSummaryList({
        rows: rows
      }) }}

    </div>
  </div>
{% endblock %}
