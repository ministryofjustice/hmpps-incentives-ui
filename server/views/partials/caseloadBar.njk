{%- from "govuk/components/tag/macro.njk" import govukTag -%}

<div class="dps-caseload-bar">
  {% if phaseName %}
    {{ govukTag({
      text: phaseName,
      classes: "govuk-!-margin-right-1"
    }) }}
  {% endif %}
  <span class="dps-caseload-bar__location" data-test="active-location">
    {{ user.activeCaseload.name }}
  </span>
  {% if user.caseloads.length > 1 %}
    <a class="dps-caseload-bar__link" href="{{ dpsUrl }}/change-caseload" data-test="change-location-link">Change your location</a>
  {% endif %}
</div>
